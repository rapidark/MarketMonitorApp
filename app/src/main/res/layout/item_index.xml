<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    android:foreground="@drawable/selector_item_clickable"
    app:elevation="1dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_market"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">

        <TextView
            android:id="@+id/item_index_tv_title"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginBottom="-5dp"
            android:layout_rowWeight="20"
            android:gravity="center_horizontal|bottom"
            android:text="上证指数"
            android:textColor="@color/text_color_day"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_index_tv_index"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:text="3051.54"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_index_tv_price"
            android:layout_columnWeight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-5dp"
            android:layout_rowWeight="20"
            android:gravity="top|right"
            android:text="-6.28"
            android:textColor="@color/green"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_index_tv_rate"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-5dp"
            android:layout_rowWeight="20"
            android:text="-0.19%"
            android:textColor="@color/green"
            android:textSize="12sp"/>


    </GridLayout>

</android.support.v7.widget.CardView>

